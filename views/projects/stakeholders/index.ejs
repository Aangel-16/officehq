<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Stakeholders - <%= project.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Stakeholders - <%= project.name %></h2>
      <a href="/projects/<%= project._id %>/stakeholders/add" class="btn btn-outline-primary">+ Add Stakeholder</a>
    </div>

    <div class="row">
      <% stakeholders.forEach(s => { %>
        <div class="col-md-4 col-lg-3 mb-4">
          <div class="card p-3 shadow-sm">
            <h5><%= s.name %></h5>
            <p class="text-muted"><%= s.type %></p>
            <p>📞 <%= s.contact %></p>
            <p>✉️ <%= s.email %></p>
            <% if (s.address) { %>
              <p class="small text-muted">📍 <%= s.address %></p>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

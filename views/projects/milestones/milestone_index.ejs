<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Milestones - <%= project.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Milestones - <%= project.name %></h2>
      <a href="/projects/<%= project._id %>/milestones/add" class="btn btn-outline-primary">+ Add Milestone</a>
    </div>

    <% if (!milestones || milestones.length === 0) { %>
      <p class="text-muted">No milestones yet.</p>
    <% } else { %>
      <div class="row">
        <% milestones.forEach(m => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm p-3">
              <h5><%= m.title %></h5>
              <p class="text-muted"><%= m.state %></p>
              <p><%= m.description %></p>
              <small><strong>Start:</strong> <%= m.startDate %></small><br>
              <small><strong>End:</strong> <%= m.endDate %></small>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Team - <%= project.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/style.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Team Members - <%= project.name %></h2>
      <a href="/projects/<%= project._id %>/team/addteam" class="btn btn-outline-primary">+ Add Team Member</a>
    </div>

    <% if (!teamMembers || teamMembers.length === 0) { %>
      <p class="text-muted">No team members yet.</p>
    <% } else { %>
      <div class="row">
        <% teamMembers.forEach(member => { %>
          <div class="col-md-4 mb-4">
            <div class="card p-3 shadow-sm">
              <h5><%= member.name %></h5>
              <p class="text-muted"><%= member.role %></p>
              <p>📞 <%= member.contact %></p>
              <p>📧 <%= member.email %></p>
              <p><small><%= member.type %></small></p>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>

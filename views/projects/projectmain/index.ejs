<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Projects</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>Projects</h3>
      <a href="/projects/add" class="btn btn-teal">Add New Project</a>
    </div>

    <div class="row">
      <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
          <div class="card project-card p-4">
            <h5><%= project.name %></h5>
            <p><strong>ID:</strong> <%= project.projectId %></p>
            <p><strong>Start:</strong> <%= project.startDate %></p>
            <p><strong>End:</strong> <%= project.endDate %></p>
            <a href="/projects/<%= project._id %>/edit" class="btn btn-teal w-100 mt-3">See Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

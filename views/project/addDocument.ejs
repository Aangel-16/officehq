<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Add Document - <%= project.pname %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
<%- include('../partials/header') %>
<%- include('../partials/projectHeader', { project: project, activeTab: 'documents' }) %>

<div class="container mt-4">
  <button class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target="#addDocumentCanvas">
    + Add Document
  </button>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="addDocumentCanvas">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">Add Document</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body">
    <form action="/project/<%= project._id %>/documents/add" method="POST" enctype="multipart/form-data">
      <div class="mb-3"><label>Category *</label>
        <select name="category" class="form-select" required>
          <option value="">Select</option>
          <option>License</option><option>Passport</option><option>Credit Card</option><option>Aadhaar</option>
        </select>
      </div>
      <div class="mb-3"><label>Type *</label>
        <select name="type" class="form-select" required>
          <option value="">Select</option><option>PDF</option><option>Image</option>
        </select>
      </div>
      <div class="mb-3"><label>Description</label>
        <textarea name="description" class="form-control"></textarea>
      </div>
      <div class="mb-3"><label>Upload File *</label>
        <input type="file" name="file" class="form-control" required>
      </div>
      <div class="text-end">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">Cancel</button>
      </div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

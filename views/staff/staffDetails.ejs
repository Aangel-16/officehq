<!--staffDetails.ejs-->

<%- include('../partials/header') %>

<div class="container mt-5">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary">Staff Details</h3>
    <a href="/staff/edit/<%= staff._id %>" class="btn btn-warning">Edit Staff</a>
  </div>

  <!-- Profile Info -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex align-items-center">
      <img src="<%= staff.photo ? ('/uploads/' + staff.photo) : 'https://via.placeholder.com/100' %>" alt="Profile Photo" class="rounded-circle me-4" style="width: 100px; height: 100px; object-fit: cover;">
      <div>
        <h5><%= staff.firstName %> <%= staff.lastName %></h5>
        <p class="text-muted mb-1"><strong>Role:</strong> <%= staff.designation || 'N/A' %></p>
        <p class="text-muted mb-0"><strong>Employee ID:</strong> <%= staff.employeeId || 'N/A' %></p>
      </div>
    </div>
  </div>

  <!-- Details Grid -->
  <div class="row">
    <div class="col-md-6 mb-3">
      <strong>Phone:</strong> <%= staff.phone || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Email:</strong> <%= staff.email || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Gender:</strong> <%= staff.gender || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Nationality:</strong> <%= staff.nationality || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Department:</strong> <%= staff.department || '-' %>
    </div>
    <div class="col-md-12 mb-3">
      <strong>Address:</strong> <%= staff.address || '-' %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
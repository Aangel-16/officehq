<%- include('../partials/header') %>
<%- include('../partials/staffHeader', { staff, activeTab: 'details' }) %>

<div class="container">

  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 id="staff-heading">Staff Details</h3>
    <a href="/staff/edit/<%= staff._id %>" class="add-staff-btn">Edit</a>
  </div>

  <!-- Profile Info Card -->
  <div class="card shadow-sm border-0 mb-4" style="border-radius: 16px;">
    <div class="card-body d-flex align-items-center">
      <img src="<%= staff.photo ? ('/uploads/' + staff.photo) : '/images/default.png' %>" 
           alt="Profile Photo" 
           class="staff-img me-4" />

      <div>
        <h5 class="staff-name mb-1"><%= staff.firstName %> <%= staff.lastName %></h5>
        <p class="staff-role mb-1"><strong>Designation:</strong> <%= staff.designation || 'N/A' %></p>
        <p class="staff-contact mb-0"><strong>Employee ID:</strong> <%= staff.employeeId || 'N/A' %></p>
      </div>
    </div>
  </div>

  <!-- Details Grid -->
  <div class="row">
    <div class="col-md-6 mb-3">
      <strong>Phone:</strong> <%= staff.phone || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Email:</strong> <%= staff.email || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Gender:</strong> <%= staff.gender || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Nationality:</strong> <%= staff.nationality || '-' %>
    </div>
    <div class="col-md-6 mb-3">
      <strong>Department:</strong> <%= staff.department || '-' %>
    </div>
    <div class="col-md-12 mb-3">
      <strong>Address:</strong> <%= staff.address || '-' %>
    </div>
  </div>

</div>

<%- include('../partials/footer') %>

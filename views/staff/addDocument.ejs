<%- include("../partials/header") %>

<div class="container form-container">
  <!-- Heading and Buttons in Same Row -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary mb-0">Add Document</h3>

    <div class="d-flex gap-2">
      <a href="/staff/documentList/<%= staffId %>" class="btn btn-cancel">Cancel</a>
      <button type="submit" form="documentForm" class="btn btn-save">Save</button>
    </div>
  </div>
<br>
  <!-- Add spacing between heading and form -->
  <div class="mb-4"></div>

  <form id="documentForm" action="/staff/documents/<%= staffId %>" method="POST" enctype="multipart/form-data">
    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label">Category <span class="text-danger">*</span></label>
        <select name="category" class="form-select rounded-input" required>
          <option value="">Select</option>
          <option value="ID">ID</option>
          <option value="Finance">Finance</option>
          <option value="Work">Work</option>
          <option value="Other">Other</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">Document Type <span class="text-danger">*</span></label>
        <select name="type" class="form-select rounded-input" required>
          <option value="">Select</option>
          <option value="Aadhaar">Aadhaar</option>
          <option value="License">License</option>
          <option value="Passport">Passport</option>
          <option value="Credit Card">Credit Card</option>
        </select>
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea name="description" class="form-control rounded-input" rows="2" placeholder="Enter description..." style="width: 400px;"></textarea>
    </div>

    <div class="mb-4">
      <label class="form-label">Upload</label>
      <label class="upload-box">
        <input type="file" name="document" required />
        <p class="mt-2"><i class="bi bi-upload"></i> Drag & Drop files or <span class="text-primary">Browse</span></p>
      </label>
    </div>
  </form>
</div>

<%- include("../partials/footer") %>

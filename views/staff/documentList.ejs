<%- include("../partials/header") %>

<div class="staff-container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 id="staff-heading">Documents</h2>
    <a href="/staff/addDocument/<%= staffId %>" class="btn add-staff-btn">+ Add Document</a>
  </div>

  <div class="search-bar mb-4">
    <input type="text" class="form-control search input" placeholder="Search...">
  </div>

  <div class="staff-grid">
    <% documents.forEach(doc => { %>
      <div>
        <div class="staff-card p-3 text-center">
          <i class="bi bi-file-earmark-text mb-2" style="font-size: 2rem; color: #0C8FAD;"></i>
          <h5 class="staff-name"><%= doc.title %></h5>
          <p class="staff-role mb-1"><%= doc.title %> Expire | <%= doc.expiryDate %></p>
          <p class="staff-contact">Document</p>
          <a href="/uploads/<%= doc.fileName %>" target="_blank"><%= doc.fileName %></a>
          <br />
          <a href="/documents/<%= doc._id %>" class="btn btn-details mt-2">See Details</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include("../partials/footer") %>
